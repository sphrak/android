<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/light</item>
        <item name="colorPrimaryDark">@color/light_smoke</item>
        <!--<item localityName="colorPrimary">@color/colorPrimary</item>
        <item localityName="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/blue_faience</item>
        <item name="android:progressBackgroundTint">@color/shaded_white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="BaseTextLight">
        <item name="android:textColor">@color/light</item>
    </style>

    <style name="BaseTextDark">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="BaseTextDarkShaded">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="TitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="TitleHintText">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/title_hint_text_size</item>
    </style>

    <style name="BaseRowTitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/base_row_title_text_size</item>

    </style>

    <style name="BaseRowHintText">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/base_row_hint_text_size</item>
    </style>

    <style name="CustomBottomNavigationStyle">
        <item name="android:background">@color/light</item>
        <item name="itemBackground">@drawable/bottom_nav_background</item>
        <item name="itemIconTint">@color/dark_gray</item>
        <item name="itemTextColor">@color/dark_gray</item>
        <item name="paddingStart">@dimen/base_row_hint_text_size</item>
        <item name="paddingEnd">@dimen/base_row_hint_text_size</item>
    </style>
</resources>